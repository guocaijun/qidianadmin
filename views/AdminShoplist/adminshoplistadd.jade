extends ../AdminPublic/adminpublic
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span 商家添加
  .mws-panel-body.no-padding
    form.mws-form(action='/doadminshoplistadd' method="post" enctype="multipart/form-data")
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 商家名
          .mws-form-item
            input.large(type='text' name="name")
        .mws-form-row
          label.mws-form-label 商家图
          .mws-form-item
            input.large(type='file' name="pic")
        .mws-form-row
          label.mws-form-label 描述
          .mws-form-item
            input.large(type='text' name="content")
        .mws-form-row
          label.mws-form-label 配送费
          .mws-form-item
            input.large(type='text' name="fee")
      .mws-button-row
        input.btn.btn-danger(type='submit' value='添加')
        input.btn(type='reset' value='重置')

block title 
 | 起点外卖后台商家添加