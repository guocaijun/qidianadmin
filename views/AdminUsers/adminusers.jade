extends ../AdminPublic/adminpublic
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  用户列表
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
      #DataTables_Table_1_filter.dataTables_filter
       form(action="/adminuserssearch" method="get") 
        label
          | 搜索名字: 
          input(type='text' aria-controls='DataTables_Table_1' name="keyword")
          input(type="submit" value="搜索")
      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 137px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 182px;') 用户名
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 166px;') 密码
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='CSS grade: activate to sort column ascending' style='width: 84px;') 操作
        tbody(role='alert' aria-live='polite' aria-relevant='all')
        -for(let i=0;i<data.length;i++)
          tr.odd
            td.sorting_1 #{data[i].id}
            td.Firefox #{data[i].name}
            td.Win #{data[i].pass}
            td.1.7
              a(href="/adminusersinfo?id=#{data[i].id}" class="btn btn-success") 用户详情 
              a(href="/adminusersaddress?name=#{data[i].name}" class="btn btn-primary") 用户收货地址
