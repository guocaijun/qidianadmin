extends ../AdminPublic/adminpublic
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  用户收货地址
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
      #DataTables_Table_1_filter.dataTables_filter
      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 137px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 182px;') 收货人
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 166px;') 电话
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='CSS grade: activate to sort column ascending' style='width: 84px;') 详细地址
        tbody(role='alert' aria-live='polite' aria-relevant='all')
        if (data.length)
         -for(let i=0;i<data.length;i++)
          tr.odd
            td.sorting_1 #{data[i].id}
            td.Firefox #{data[i].name}
            td.Win #{data[i].phone}
            td.Win #{data[i].address}
        else 
          h1(style='color:white') 该用户还没有添加收货地址
