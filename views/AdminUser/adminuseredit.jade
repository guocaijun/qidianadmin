extends ../AdminPublic/adminpublic
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span 管理员修改
  .mws-panel-body.no-padding
    form.mws-form(action='/doadminuseredit' method="post")
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 管理员
          .mws-form-item
            input.large(type='text' name="name" value="#{data.name}")
        .mws-form-row
          label.mws-form-label 密码
          .mws-form-item
            input.large(type='password' name="password" value="#{data.password}")
      .mws-button-row
        input(type="hidden" name="id" value="#{data.id}")
        input.btn.btn-danger(type='submit' value='修改')
        input.btn(type='reset' value='重置')

block title 
 | 起点外卖后台管理员修改