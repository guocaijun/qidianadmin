extends ../AdminPublic/adminpublic
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span
      i.icon-table
      |  管理员列表
  .mws-panel-body.no-padding
    #DataTables_Table_1_wrapper.dataTables_wrapper(role='grid')
      table#DataTables_Table_1.mws-datatable-fn.mws-table.dataTable(aria-describedby='DataTables_Table_1_info')
        thead
          tr(role='row')
            th.sorting_asc(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-sort='ascending' aria-label='Rendering engine: activate to sort column descending' style='width: 137px;') 序号
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Browser: activate to sort column ascending' style='width: 182px;') 管理员
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='Platform(s): activate to sort column ascending' style='width: 166px;') 密码
            th.sorting(role='columnheader' tabindex='0' aria-controls='DataTables_Table_1' rowspan='1' colspan='1' aria-label='CSS grade: activate to sort column ascending' style='width: 84px;') 操作
        tbody(role='alert' aria-live='polite' aria-relevant='all')
        -for(let i=0;i<data.length;i++)
          tr.odd
            td.sorting_1 #{data[i].id}
            td.Firefox #{data[i].name}
            td.Win #{data[i].password}
            td.1.7 
              a(href="/adminuserdel?id=#{data[i].id}" class="btn btn-danger") 删除
              a(href="/adminuseredit?id=#{data[i].id}" class="btn btn-warning") 修改 
      #DataTables_Table_1_paginate.dataTables_paginate.paging_full_numbers
        a#DataTables_Table_1_first.first.paginate_button.paginate_button_disabled(tabindex='0') First
        a#DataTables_Table_1_previous.previous.paginate_button.paginate_button_disabled(tabindex='0') Previous
        span
          a.paginate_active(tabindex='0') 1
          a.paginate_button(tabindex='0') 2
          a.paginate_button(tabindex='0') 3
          a.paginate_button(tabindex='0') 4
          a.paginate_button(tabindex='0') 5
        a#DataTables_Table_1_next.next.paginate_button(tabindex='0') Next
        a#DataTables_Table_1_last.last.paginate_button(tabindex='0') Last
