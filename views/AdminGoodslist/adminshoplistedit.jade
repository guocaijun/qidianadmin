extends ../AdminPublic/adminpublic
block admin 
 .mws-panel.grid_8
  .mws-panel-header
    span 商家修改
  .mws-panel-body.no-padding
    form.mws-form(action='/doadminshoplistedit' method="post" enctype="multipart/form-data")
      .mws-form-inline
        .mws-form-row
          label.mws-form-label 商家名
          .mws-form-item
            input.large(type='text' name="name" value="#{data.name}")
        .mws-form-row
          label.mws-form-label 商家图
          .mws-form-item
            img(src="https://ygjy007.oss-cn-beijing.aliyuncs.com/#{data.pic}", alt="" width="100px" height="100px")
        .mws-form-row
          label.mws-form-label 上传商家图
          .mws-form-item
            input.large(type='file' name="pic")
        .mws-form-row
          label.mws-form-label 描述
          .mws-form-item
            input.large(type='text' name="content" value="#{data.content}")
        .mws-form-row
          label.mws-form-label 配送费
          .mws-form-item
            input.large(type='text' name="fee" value="#{data.fee}")
      .mws-button-row
        input(type="hidden" name="id" value="#{data.id}")
        input.btn.btn-danger(type='submit' value='修改')
        input.btn(type='reset' value='重置')

block title 
 | 起点外卖后台商家修改